.l-main-section.l-constrained
  .l-side-section.section
    .book-details__cover
      = image_tag @book.cover_image
    = link_to 'Buy', @book.amazon_link, class: ['btn', 'buy-button']
    .book-details__sidebar-details
      .book-details__sidebar-details__title Publication Details
      = @book.publisher
      p Published #{@book.publish_date.strftime('%D')}

  .l-main-section--constrained
    .section
      h1.book-details__title= @book.title
      h2.book-details__subtitle= @book.subtitle
      h2.book-details__author= @book.author

      - if @book.editor_notes
        == @book.editor_notes
    .section
      h2.section__header Book Description
      expandable-section.ng-cloak== @book.description

    .section
      comments-section
